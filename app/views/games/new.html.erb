<h1>New game</h1>

<div class="container">
  <% @letters.each do |letter| %>
  <div class="letters"><%= letter.capitalize %></div>
  <% end %>
</div>

<form action="/score" method="post">
  <label for="word">What is the longest word you can find?</label><br>
  <input type="text" name="word">
  <input type="submit" value="Submit!">
  <%= hidden_field_tag :letter_grid, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
